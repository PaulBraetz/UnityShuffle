@page "/"

<div class="d-flex flex-column flex-grow-1">
		<StateMachineFrame>
			<div class="d-flex flex-column flex-grow-1">
				<div class="d-flex justify-content-center">
					<div class="rounded m-2 stepbar">
						<OrangeButton State="0" Title="User" />
						<OrangeButton State="1" Title="Create Mission" />
						<OrangeButton State="2" Title="Manage Rooms" />
						<OrangeButton State="3" Title="Join Rooms" />
					</div>
				</div>
				<div class="d-flex justify-content-center h-100 w-100">
					<div class="rounded shadow d-flex flex-column m-2 p-2 bg-default h-100 col-md-8 col-lg-7 col-xl-5 col-xxl-3">
						<Step State="0">
							<User />
						</Step>
						<Step State="1">
							<CreateMission />
						</Step>
						<Step State="2">
							<ManageRooms />
						</Step>
						<Step State="3">
							<JoinRooms />
						</Step>
					</div>
				</div>
			</div>
		</StateMachineFrame>
		<div class="d-flex justify-content-center mt-4">
			<Reconnect />
		</div>
		<div class="d-flex justify-content-center">
			<DefaultCookieBanner />
		</div>
		<div class="d-flex justify-content-center">
			<div class="rounded shadow d-flex flex-column m-2 p-2">
				<span>
					<Localize Value="Issues?" /><br />
					<Localize Value="Visit the official git repository :" /> <a href="https://github.com/PaulBraetz/UnityShuffle">GitHub</a>.
				</span>
			</div>
		</div>
</div>